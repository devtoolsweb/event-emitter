{
  "author": "<aperos.dev@gmail.com>",
  "description": "An implementation of the EventEmitter mixin for TypeScript, suitable for use both in the browser and in Node.js",
  "devDependencies": {
    "dts-bundle": "latest",
    "make-dts-bundle": "latest",
    "rollup": "latest",
    "rollup-plugin-terser": "latest",
    "rollup-plugin-typescript2": "latest",
    "ts-node": "latest",
    "typescript": "latest"
  },
  "license": "MIT",
  "name": "@aperos/event-emitter",
  "main": "dist/index.js",
  "scripts": {
    "build": "rollup -c && npm run build-dts",
